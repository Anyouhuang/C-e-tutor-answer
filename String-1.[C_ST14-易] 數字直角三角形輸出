#include <stdio.h>

int main()
{
    int i,j,number;
    scanf("%d",&number);
    
    for(j=2;j<number+2;j++){
        
        for(i=1;i<number+2-j;i++){
            printf(" ");
            
        }
        if(j%2==0){
            for(i=1;i<j;i++){
            
            printf("%d",i);
            }
        }else{
            for(i=j-1;i>0;i--){
            
            printf("%d",i);
            }
        } 
        
        printf("\n");
    }
       
    return 0;
}
